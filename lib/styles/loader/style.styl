@keyframes expand
  0%
    z-index 2
    transform scale(0)
  50%
    z-index 1
    transform scale(1)
  100%
    z-index 0

.loader
  position absolute
  left 50%
  top 50%
  margin -20px 0 0 -20px
  width 38px
  height 38px
  background-color white
  border-radius 50%
  box-shadow 0 0 0 6.66666667px #141414
  &::before, &::after
    content ""
    position absolute
    left 50%
    top 50%
    display block
    margin -20px 0 0 -20px
    width 40px
    height 40px
    border-radius 50%
    transform translate3d(0, 0, 0)
  &::before
    background-color #181818
    animation expand 1.6s ease-out infinite both
  &::after
    background-color white
    animation expand 1.6s ease-out 0.8s infinite both
